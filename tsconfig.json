{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["es2019"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "declaration": true,
    "sourceMap": false
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "features/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
